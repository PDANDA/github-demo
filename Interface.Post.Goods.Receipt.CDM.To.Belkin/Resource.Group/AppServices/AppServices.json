{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string"
    },
    "commonEnvironment": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "servicebusConnectionName": {
      "type": "string"
    },
    "servicebusConnectionDisplayName": {
      "type": "string"
    },
    "serviceBusNamespaceName": {
      "type": "string"
    },
    "commonResourceGroupName": {
      "type": "string",
      "defaultValue": "DEV-Integration-Common"
    },
    "serverFarmName": {
      "type": "string"
    },
    "serverFarmResourceGroup": {
      "type": "string"
    },
    "apiBlobConnectorAppName": {
      "type": "string"
    },
    "adBlobAuthClientId": {
      "type": "string"
    },
    "adAuthIssuer": {
      "type": "string"
    },
    "adAuthTenant": {
      "type": "string"
    }
  },
  "variables": {
    "storageApiVersion": "2016-12-01",
    "commonResourceGroupName": "[concat(parameters('commonEnvironment'),'-', parameters('commonResourceGroupName'))]",
    "connectionApiVersion": "2015-08-01-preview",
    "apiAppApiVersion": "2015-08-01",
    "serviceBusNamespaceAuthRuleName": "[concat(parameters('commonEnvironment'), '-', parameters('serviceBusNamespaceName'),'/RootManageSharedAccessKey')]",
    "serviceBusNamespaceauthRuleResourceId": "[resourceId(concat(parameters('commonEnvironment'), '-',parameters('commonResourceGroupName')),'Microsoft.ServiceBus/namespaces/authorizationRules', concat(parameters('commonEnvironment'), '-',parameters('serviceBusNamespaceName')), 'RootManageSharedAccessKey')]",
    "storageAccountName": "[replace(parameters('storageAccountName'), '[env]', toLower(parameters('environment')))]",
    "siteAuthIssuer": "[concat(parameters('adAuthIssuer'), '/', parameters('adAuthTenant'), '/')]",
    "apiBlobConnectorAppName": "[concat(parameters('environment'),'-', parameters('apiBlobConnectorAppName'))]"
  },
  "resources": [
    {
      "name": "[concat(parameters('environment'), '-', parameters('apiBlobConnectorAppName'))]",
      "type": "Microsoft.Web/sites",
      "kind": "api",
      "location": "[resourceGroup().location]",
      "apiVersion": "[variables('apiAppApiVersion')]",
      "dependsOn": [],
      "tags": {
        "[concat('hidden-related:', resourceId(concat(parameters('commonEnvironment'), '-',parameters('serverFarmResourceGroup')), 'Microsoft.Web/serverFarms', concat(parameters('commonEnvironment'), '-',parameters('serverFarmName'))))]": "Resource",
        "displayName": "apiBlobConnectorApp"
      },
      "properties": {
        "name": "[concat(parameters('environment'), '-', parameters('apiBlobConnectorAppName'))]",
        "serverFarmId": "[resourceId(concat(parameters('commonEnvironment'), '-',parameters('serverFarmResourceGroup')), 'Microsoft.Web/serverFarms', concat(parameters('commonEnvironment'), '-',parameters('serverFarmName')))]"
      },
      "resources": [
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', concat(parameters('environment'), '-', parameters('apiBlobConnectorAppName')))]"
          ],
          "tags": {
            "displayName": "appSettings"
          },
          "properties": {
            "StorageConnectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId(variables('commonResourceGroupName'), 'Microsoft.Storage/storageAccounts', variables('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]"
          }
        },
        {
          "name": "web",
          "type": "config",
          "apiVersion": "[variables('apiAppApiVersion')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('apiBlobConnectorAppName'))]"
          ],
          "tags": {
            "displayName": "webSettings"
          },
          "properties": {
            "cors": {
              "allowedOrigins": [
                "*"
              ]
            },
            "apiDefinition": {
              "url": "[concat('https://', reference(concat('Microsoft.Web/sites/', variables('apiBlobConnectorAppName'))).defaultHostName, '/swagger/docs/v1')]"
            },
            "siteAuthEnabled": true,
            "siteAuthSettings": {
              "clientId": "[parameters('adBlobAuthClientId')]",
              "issuer": "[variables('siteAuthIssuer')]"
            }
          }
        }
      ]
    }
  ],
  "outputs": {}
}