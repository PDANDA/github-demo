{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentName": {
      "type": "string"
    },
    "commonEnvironment": {
      "type": "string"
    },
    "servicebusConnectionName": {
      "type": "string"
    },
    "servicebusConnectionDisplayName": {
      "type": "string"
    },
    "serviceBusNamespaceName": {
      "type": "string"
    },
    "commonResourceGroupName": {
      "type": "string",
      "defaultValue": "DEV-Integration-Common"
    }
  },
  "variables": {
    "storageApiVersion": "2016-12-01",
    "connectionApiVersion": "2015-08-01-preview",
    "apiAppApiVersion": "2015-08-01",
    "serviceBusNamespaceAuthRuleName": "[concat(parameters('environmentName'), '-', parameters('serviceBusNamespaceName'),'/RootManageSharedAccessKey')]",
    "serviceBusNamespaceauthRuleResourceId": "[resourceId(concat(parameters('commonEnvironment'), '-',parameters('commonResourceGroupName')),'Microsoft.ServiceBus/namespaces/authorizationRules', concat(parameters('environmentName'), '-',parameters('serviceBusNamespaceName')), 'RootManageSharedAccessKey')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "[variables('connectionApiVersion')]",
      "location": "[resourceGroup().location]",
      "name": "[parameters('servicebusConnectionName')]",
      "tags": {
        "displayName": "servicebusConnection"
      },
      "properties": {
        "api": {
          "id": "[concat('subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/servicebus')]"
        },
        "displayName": "[parameters('servicebusConnectionDisplayName')]",
        "parameterValues": {
          "connectionString": "[listkeys(variables('serviceBusNamespaceauthRuleResourceId'), '2015-08-01').primaryConnectionString]"
        }
      }
    }
  ],
    "outputs": {
    }
}
