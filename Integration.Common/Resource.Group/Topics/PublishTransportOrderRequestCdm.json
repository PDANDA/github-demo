{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string"
    },
    "serviceBusNamespaceName": {
      "type": "string"
    },
    "topicName": {
      "type": "string"
    },
    "topicDisplayName": {
      "type": "string"
    },
    "starTrackSubscriptionName": {
      "type": "string"
    },
    "starTrackSubscriptionDisplayName": {
      "type": "string"
    },
    "ausPostSubscriptionName": {
      "type": "string"
    },
    "ausPostSubscriptionDisplayName": {
      "type": "string"
    },
    "testSubscriptionName": {
      "type": "string"
    },
    "testSubscriptionDisplayName": {
      "type": "string"
    }
  },
  "variables": {
    "topicApiVersion": "2015-08-01",
    "subscriptionApiVersion": "2015-08-01",
    "serviceBusNamespaceName": "[concat(parameters('environment'), '-', parameters('serviceBusNamespaceName'))]",
    "topicName": "[concat(variables('serviceBusNamespaceName'),'/', parameters('topicName'))]",
    "ausPostSubscriptionName": "[concat(variables('topicName'), '/', parameters('ausPostSubscriptionName'))]",
    "starTrackSubscriptionName": "[concat(variables('topicName'), '/', parameters('starTrackSubscriptionName'))]",
    "testSubscriptionName": "[concat(variables('topicName'),'/', parameters('testSubscriptionName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ServiceBus/namespaces/topics",
      "name": "[variables('topicName')]",
      "tags": {
        "displayName": "[parameters('topicDisplayName')]"
      },
      "apiVersion": "[variables('topicApiVersion')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "defaultMessageTimeToLive": "14.00:00:00",
        "maxSizeInMegabytes": 5120,
        "requiresDuplicateDetection": false,
        "enablePartitioning": true,
        "enableBatchedOperations": true,
        "filteringMessagesBeforePublishing": false,
        "isAnonymousAccessible": false,
        "isExpress": false,
        "enableSubscriptionPartitioning": false,
        "enableExpress": false
      },
      "resources": [
        {
          "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
          "name": "[variables('testSubscriptionName')]",
          "tags": {
            "displayName": "[parameters('testSubscriptionDisplayName')]"
          },
          "apiVersion": "[variables('subscriptionApiVersion')]",
          "location": "[resourceGroup().location]",
          "properties": {
            "lockDuration": "00:05:00",
            "requiresSession": false,
            "defaultMessageTimeToLive": "14.00:00:00",
            "deadLetteringOnMessageExpiration": false,
            "deadLetteringOnFilterEvaluationExceptions": false,
            "messageCount": 0,
            "maxDeliveryCount": 1,
            "enableBatchedOperations": false
          },
          "resources": [],
          "dependsOn": [
            "[resourceId('Microsoft.ServiceBus/namespaces/topics', variables('serviceBusNamespaceName'), parameters('topicName'))]"
          ]
        },
        {
          "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
          "name": "[variables('starTrackSubscriptionName')]",
          "tags": {
            "displayName": "[parameters('starTrackSubscriptionDisplayName')]"
          },
          "apiVersion": "[variables('subscriptionApiVersion')]",
          "location": "[resourceGroup().location]",
          "properties": {
            "lockDuration": "00:05:00",
            "requiresSession": false,
            "defaultMessageTimeToLive": "14.00:00:00",
            "deadLetteringOnMessageExpiration": false,
            "deadLetteringOnFilterEvaluationExceptions": false,
            "messageCount": 0,
            "maxDeliveryCount": 1,
            "enableBatchedOperations": false
          },
          "resources": [
            {
              "apiVersion": "[variables('subscriptionApiVersion')]",
              "name": "$Default",
              "type": "Rules",
              "dependsOn": [
                "[parameters('starTrackSubscriptionName')]"
              ],
              "properties": {
                "filter": {
                  "sqlExpression": "CarrierName='STE'"
                },
                "action": {}
              }
            }
          ],
          "dependsOn": [
            "[resourceId('Microsoft.ServiceBus/namespaces/topics', variables('serviceBusNamespaceName'), parameters('topicName'))]"
          ]
        },
        {
          "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
          "name": "[variables('ausPostSubscriptionName')]",
          "tags": {
            "displayName": "[parameters('ausPostSubscriptionDisplayName')]"
          },
          "apiVersion": "[variables('subscriptionApiVersion')]",
          "location": "[resourceGroup().location]",
          "properties": {
            "lockDuration": "00:05:00",
            "requiresSession": false,
            "defaultMessageTimeToLive": "14.00:00:00",
            "deadLetteringOnMessageExpiration": false,
            "deadLetteringOnFilterEvaluationExceptions": false,
            "messageCount": 0,
            "maxDeliveryCount": 1,
            "enableBatchedOperations": false
          },
          "resources": [
            {
              "apiVersion": "[variables('subscriptionApiVersion')]",
              "name": "$Default",
              "type": "Rules",
              "dependsOn": [
                "[parameters('ausPostSubscriptionName')]"
              ],
              "properties": {
                "filter": {
                  "sqlExpression": "CarrierName='AUP'"
                },
                "action": {}
              }
            }
          ],
          "dependsOn": [
            "[resourceId('Microsoft.ServiceBus/namespaces/topics', variables('serviceBusNamespaceName'), parameters('topicName'))]"
          ]
        }
      ],
      "dependsOn": []
    }
  ],
  "outputs": {}
}