{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentName": {
      "type": "string"
    },
    "commonEnvironmentName": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "servicePlanName": {
      "type": "string"
    },
    "commonResourceGroupName": {
      "type": "string"
    },
    "apiBlobConnectorAppName": {
      "type": "string"
    },
    "serviceBusNamespaceName": {
      "type": "string",
      "defaultValue": "SB-Common"
    },
    "functionAppName": {
      "type": "string"
    },
    "decodeEdifactLogicAppName": {
      "type": "string"
    },
    "encodeEdifactLogicAppName": {
      "type": "string"
    },
    "sendAS2LogicAppName": {
      "type": "string"
    },
    "adAuthClientId": {
      "type": "string"
    },
    "adAuthIssuer": {
      "type": "string"
    },
    "adAuthTenant": {
      "type": "string"
    }
  },
  "variables": {
    "storageApiVersion": "2016-12-01",
    "connectionApiVersion": "2015-08-01-preview",
    "apiAppApiVersion": "2015-08-01",
    "commonResourceGroupName": "[concat(parameters('commonEnvironmentName'),'-', parameters('commonResourceGroupName'))]",
    "servicePlanName": "[concat(parameters('commonEnvironmentName'),'-', parameters('servicePlanName'))]",
    "apiBlobConnectorAppName": "[concat(parameters('environmentName'),'-', parameters('apiBlobConnectorAppName'))]",
    "storageAccountName": "[replace(parameters('storageAccountName'), '[env]', toLower(parameters('environmentName')))]",
    "serviceBusNamespaceName": "[concat(parameters('environmentName'), '-', parameters('serviceBusNamespaceName'))]",
    "serviceBusNamespaceauthRuleResourceId": "[resourceId(variables('commonResourceGroupName'),'Microsoft.ServiceBus/namespaces/authorizationRules', variables('serviceBusNamespaceName'), 'RootManageSharedAccessKey')]",
    "functionAppName": "[concat(parameters('environmentName'),'-', parameters('functionAppName'))]",
    "decodeEdifactLogicAppName": "[concat(parameters('environmentName'), '-', parameters('decodeEdifactLogicAppName'))]",
    "encodeEdifactLogicAppName": "[concat(parameters('environmentName'), '-', parameters('encodeEdifactLogicAppName'))]",
    "sendAS2LogicAppName": "[concat(parameters('environmentName'), '-', parameters('sendAS2LogicAppName'))]",
    "siteAuthIssuer": "[concat(parameters('adAuthIssuer'), '/', parameters('adAuthTenant'), '/')]"
  },
  "resources": [
    {
      "name": "[variables('apiBlobConnectorAppName')]",
      "type": "Microsoft.Web/sites",
      "kind": "api",
      "location": "[resourceGroup().location]",
      "apiVersion": "[variables('apiAppApiVersion')]",
      "dependsOn": [
      ],
      "tags": {
        "[concat('hidden-related:', resourceId(variables('commonResourceGroupName'), 'Microsoft.Web/serverFarms', variables('servicePlanName')))]": "Resource",
        "displayName": "apiBlobConnectorApp"
      },
      "properties": {
        "name": "[variables('apiBlobConnectorAppName')]",
        "serverFarmId": "[resourceId(variables('commonResourceGroupName'), 'Microsoft.Web/serverFarms', variables('servicePlanName'))]"
      },
      "resources": [
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "[variables('apiAppApiVersion')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('apiBlobConnectorAppName'))]"
          ],
          "tags": {
            "displayName": "appSettings"
          },
          "properties": {
            "StorageConnectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId(variables('commonResourceGroupName'), 'Microsoft.Storage/storageAccounts', variables('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]"
          }
        },
        {
          "name": "web",
          "type": "config",
          "apiVersion": "[variables('apiAppApiVersion')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('apiBlobConnectorAppName'))]"
          ],
          "tags": {
            "displayName": "authSettings"
          },
          "properties": {
            "cors": {
              "allowedOrigins": [
                "*"
              ]
            },
            "apiDefinition": {
              "url": "[concat('https://', reference(concat('Microsoft.Web/sites/', variables('apiBlobConnectorAppName'))).defaultHostName, '/swagger/docs/v1')]"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('functionAppName')]",
      "type": "Microsoft.Web/sites",
      "kind": "functionapp",
      "location": "[resourceGroup().location]",
      "apiVersion": "[variables('apiAppApiVersion')]",
      "dependsOn": [],
      "tags": {
        "[concat('hidden-related:', resourceId(variables('commonResourceGroupName'), 'Microsoft.Web/serverFarms', variables('servicePlanName')))]": "Resource",
        "displayName": "functionApp"
      },
      "properties": {
        "name": "[variables('functionAppName')]",
        "serverFarmId": "[resourceId(variables('commonResourceGroupName'), 'Microsoft.Web/serverFarms', variables('servicePlanName'))]",
        "clientAffinityEnabled": false,
        "siteConfig": {
          "AlwaysOn": true
        }
      },
      "resources": [
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]"
          ],
          "tags": {
            "displayName": "appSettings"
          },
          "properties": {
            "FUNCTIONS_EXTENSION_VERSION": "~1",
            "AzureWebJobsDashboard": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId(variables('commonResourceGroupName'), 'Microsoft.Storage/storageAccounts', variables('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]",
            "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId(variables('commonResourceGroupName'), 'Microsoft.Storage/storageAccounts', variables('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]",
            "ServiceBusConnStr": "[listkeys(variables('serviceBusNamespaceauthRuleResourceId'), '2015-08-01').primaryConnectionString]",
            "StorageConnStr": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId(variables('commonResourceGroupName'), 'Microsoft.Storage/storageAccounts', variables('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]",
            "DecodeEdifactLogicAppUri": "[listCallbackURL(concat(resourceId('Microsoft.Logic/workflows/', variables('decodeEdifactLogicAppName')), '/triggers/manual'), '2016-06-01').value]",
            "EncodeEdifactLogicAppUri": "[listCallbackURL(concat(resourceId('Microsoft.Logic/workflows/', variables('encodeEdifactLogicAppName')), '/triggers/manual'), '2016-06-01').value]",
            "SendAS2LogicAppUri": "[listCallbackURL(concat(resourceId('Microsoft.Logic/workflows/', variables('sendAS2LogicAppName')), '/triggers/manual'), '2016-06-01').value]"
          }
        }
      ]
    }
  ],
  "outputs": {
  }
}
