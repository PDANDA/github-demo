{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string"
    },
    "serviceBusNamespaceName": {
      "type": "string"
    },
    "topicName": {
      "type": "string"
    },
    "topicDisplayName": {
      "type": "string"
    },
    "asnSubscriptionName": {
      "type": "string"
    },
    "asnSubscriptionDisplayName": {
      "type": "string"
    },
    "pmSubscriptionName": {
      "type": "string"
    },
    "pmSubscriptionDisplayName": {
      "type": "string"
    },
    "rmaSubscriptionName": {
      "type": "string"
    },
    "rmaSubscriptionDisplayName": {
      "type": "string"
    },
    "wsoSubscriptionName": {
      "type": "string"
    },
    "wsoSubscriptionDisplayName": {
      "type": "string"
    },
    "testSubscriptionName": {
      "type": "string"
    },
    "testSubscriptionDisplayName": {
      "type": "string"
    }
  },
  "variables": {
    "topicApiVersion": "2015-08-01",
    "subscriptionApiVersion": "2015-08-01",
    "serviceBusNamespaceName": "[concat(parameters('environment'),'-', parameters('serviceBusNamespaceName'))]",
    "topicName": "[concat(variables('serviceBusNamespaceName'),'/', parameters('topicName'))]",
    "asnSubscriptionName": "[concat(variables('topicName'), '/', parameters('asnSubscriptionName'))]",
    "pmSubscriptionName": "[concat(variables('topicName'), '/', parameters('pmSubscriptionName'))]",
    "rmaSubscriptionName": "[concat(variables('topicName'), '/', parameters('rmaSubscriptionName'))]",
    "wsoSubscriptionName": "[concat(variables('topicName'), '/', parameters('wsoSubscriptionName'))]",
    "testSubscriptionName": "[concat(variables('topicName'),'/', parameters('testSubscriptionName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ServiceBus/namespaces/topics",
      "name": "[variables('topicName')]",
      "tags": {
        "displayName": "[parameters('topicDisplayName')]"
      },
      "apiVersion": "[variables('topicApiVersion')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "defaultMessageTimeToLive": "14.00:00:00",
        "maxSizeInMegabytes": 5120,
        "requiresDuplicateDetection": false,
        "enablePartitioning": true,
        "enableBatchedOperations": true,
        "filteringMessagesBeforePublishing": false,
        "isAnonymousAccessible": false,
        "isExpress": false,
        "enableSubscriptionPartitioning": false,
        "enableExpress": false
      },
      "resources": [
        {
          "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
          "name": "[variables('asnSubscriptionName')]",
          "tags": {
            "displayName": "[parameters('asnSubscriptionDisplayName')]"
          },
          "apiVersion": "[variables('subscriptionApiVersion')]",
          "location": "[resourceGroup().location]",
          "properties": {
            "lockDuration": "00:05:00",
            "requiresSession": false,
            "defaultMessageTimeToLive": "14.00:00:00",
            "deadLetteringOnMessageExpiration": false,
            "deadLetteringOnFilterEvaluationExceptions": false,
            "messageCount": 0,
            "maxDeliveryCount": 1,
            "enableBatchedOperations": false
          },
          "resources": [
            {
              "apiVersion": "[variables('subscriptionApiVersion')]",
              "name": "$Default",
              "type": "Rules",
              "dependsOn": [
                "[parameters('asnSubscriptionName')]"
              ],
              "properties": {
                "filter": {
                  "sqlExpression": "DocType='ORDERS'"
                },
                "action": {}
              }
            }
          ],
          "dependsOn": [
            "[resourceId('Microsoft.ServiceBus/namespaces/topics', variables('serviceBusNamespaceName'), parameters('topicName'))]"
          ]
        },
        {
          "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
          "name": "[variables('rmaSubscriptionName')]",
          "tags": {
            "displayName": "[parameters('rmaSubscriptionDisplayName')]"
          },
          "apiVersion": "[variables('subscriptionApiVersion')]",
          "location": "[resourceGroup().location]",
          "properties": {
            "lockDuration": "00:05:00",
            "requiresSession": false,
            "defaultMessageTimeToLive": "14.00:00:00",
            "deadLetteringOnMessageExpiration": false,
            "deadLetteringOnFilterEvaluationExceptions": false,
            "messageCount": 0,
            "maxDeliveryCount": 1,
            "enableBatchedOperations": false
          },
          "resources": [
            {
              "apiVersion": "[variables('subscriptionApiVersion')]",
              "name": "$Default",
              "type": "Rules",
              "dependsOn": [
                "[parameters('rmaSubscriptionName')]"
              ],
              "properties": {
                "filter": {
                  "sqlExpression": "DocType='ORDRSP' AND (DocSubType='YC')"
                },
                "action": {}
              }
            }
          ],
          "dependsOn": [
            "[resourceId('Microsoft.ServiceBus/namespaces/topics', variables('serviceBusNamespaceName'), parameters('topicName'))]"
          ]
        },
        {
          "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
          "name": "[variables('wsoSubscriptionName')]",
          "tags": {
            "displayName": "[parameters('wsoSubscriptionDisplayName')]"
          },
          "apiVersion": "[variables('subscriptionApiVersion')]",
          "location": "[resourceGroup().location]",
          "properties": {
            "lockDuration": "00:05:00",
            "requiresSession": false,
            "defaultMessageTimeToLive": "14.00:00:00",
            "deadLetteringOnMessageExpiration": false,
            "deadLetteringOnFilterEvaluationExceptions": false,
            "messageCount": 0,
            "maxDeliveryCount": 1,
            "enableBatchedOperations": false
          },
          "resources": [
            {
              "apiVersion": "[variables('subscriptionApiVersion')]",
              "name": "$Default",
              "type": "Rules",
              "dependsOn": [
                "[parameters('wsoSubscriptionName')]"
              ],
              "properties": {
                "filter": {
                  "sqlExpression": "DocType='ORDRSP' AND (DocSubType!='YC')"
                },
                "action": {}
              }
            }
          ],
          "dependsOn": [
            "[resourceId('Microsoft.ServiceBus/namespaces/topics', variables('serviceBusNamespaceName'), parameters('topicName'))]"
          ]
        },
        {
          "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
          "name": "[variables('testSubscriptionName')]",
          "tags": {
            "displayName": "[parameters('testSubscriptionDisplayName')]"
          },
          "apiVersion": "[variables('subscriptionApiVersion')]",
          "location": "[resourceGroup().location]",
          "properties": {
            "lockDuration": "00:05:00",
            "requiresSession": false,
            "defaultMessageTimeToLive": "14.00:00:00",
            "deadLetteringOnMessageExpiration": false,
            "deadLetteringOnFilterEvaluationExceptions": false,
            "messageCount": 0,
            "maxDeliveryCount": 1,
            "enableBatchedOperations": false
          },
          "resources": [],
          "dependsOn": [
            "[resourceId('Microsoft.ServiceBus/namespaces/topics', variables('serviceBusNamespaceName'), parameters('topicName'))]"
          ]
        },
        {
          "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
          "name": "[variables('pmSubscriptionName')]",
          "tags": {
            "displayName": "[parameters('pmSubscriptionDisplayName')]"
          },
          "apiVersion": "[variables('subscriptionApiVersion')]",
          "location": "[resourceGroup().location]",
          "properties": {
            "lockDuration": "00:05:00",
            "requiresSession": false,
            "defaultMessageTimeToLive": "14.00:00:00",
            "deadLetteringOnMessageExpiration": false,
            "deadLetteringOnFilterEvaluationExceptions": false,
            "messageCount": 0,
            "maxDeliveryCount": 1,
            "enableBatchedOperations": false
          },
          "resources": [
            {
              "apiVersion": "[variables('subscriptionApiVersion')]",
              "name": "$Default",
              "type": "Rules",
              "dependsOn": [
                "[parameters('pmSubscriptionName')]"
              ],
              "properties": {
                "filter": {
                  "sqlExpression": "DocType='PRICAT'"
                },
                "action": {}
              }
            }
          ],
          "dependsOn": [
            "[resourceId('Microsoft.ServiceBus/namespaces/topics', variables('serviceBusNamespaceName'), parameters('topicName'))]"
          ]
        }
      ],
      "dependsOn": []
    }
  ],
  "outputs": {}
}